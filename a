<body>
    <h1>Aşkım bebeğim canım bitanem, artık crop giymemeye ne dersin?</h1>
    <div class="button-container">
        <button id="yes" onclick="thankYou()">Evet</button>
        <button id="no" ontouchstart="moveButton()" onmouseover="moveButton()" onclick="moveButton()">Hayır</button>
    </div>
    <div class="heart">ens❤️rüm</div>
    <script>
        function moveButton() {
            var noButton = document.getElementById("no");
            var x = Math.random() * (window.innerWidth - 100);
            var y = Math.random() * (window.innerHeight - 50);
            noButton.style.left = x + "px";
            noButton.style.top = y + "px";
        }
        function thankYou() {
            document.body.innerHTML = "<h1 style='color:green;'>BEN DE AYNI FİKİRDEYİİM AŞŞŞKIIIMM :)))</h1>" +
                                      "<div class='love-message'>ÇOK SEVİYORUM SENİ ❤️</div>";
        }
    </script>
